@{
    ViewData["Title"] = "Home Page";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger m-3" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<div class="container">
    <div class="row">
        <div class="col">
            <form asp-action="Index" method="get" class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" name="userNameSearch" id="userNameSearch" placeholder="Search by username" aria-label="Search by username">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
        <div class="col">
            @if (Model.Count != 0)
            {
                foreach (var user in Model)
                {
                    <a asp-action="Details" asp-controller="User" asp-route-userId="@user.Id">@user.Name @user.LastName</a>
                    <hr />
                }
            }
        </div>

    </div>
</div>

