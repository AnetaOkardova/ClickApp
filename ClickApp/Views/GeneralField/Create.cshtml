@model ClickApp.ViewModels.CreateGeneralFieldViewModel

@{
    ViewData["Title"] = "Create general field";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                </br>
                <div>
                    <input type="radio" id="Code1" name="Code" value="@GeneralFieldCode.INT"
                           checked>
                    <label for="Code1">Interest</label>
                </div>

                <div>
                    <input type="radio" id="Code2" name="Code" value="@GeneralFieldCode.SKL">
                    <label for="Code2">Skill</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Overview">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
