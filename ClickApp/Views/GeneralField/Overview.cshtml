@model IEnumerable<ClickApp.ViewModels.GeneralFieldViewModel>


    @{
    ViewData["Title"] = "Overview";
    }




    @if (ViewBag.ErrorMessage != null)
    {
    <div class="alert alert-danger m-3" role="alert">
        @ViewBag.ErrorMessage
    </div>
    }

    <p>
        <a asp-action="Create">Create new general field</a>
    </p>

    <div class="row justify-content-between">
        <div class="col">
            <form asp-action="Overview" method="get" class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" name="nameSearch" id="nameSearch" placeholder="Search by name" aria-label="Search by name">
                <label name="codeSearch" class="control-label"></label>
                </br>
                <div class="m-2">
                    <input type="radio" id="Code0" name="codeSearch" value="@GeneralFieldCode.NONE" checked hidden>
                </div>
                <div class="m-2">
                    <input type="radio" id="Code1" name="codeSearch" value="@GeneralFieldCode.INT">
                    <label for="Code1">Interest</label>
                </div>
                <div class="m-2">
                    <input type="radio" id="Code2" name="codeSearch" value="@GeneralFieldCode.SKL">
                    <label for="Code2">Skill</label>
                </div>
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </div>
   
</br>

    @if(@Model != null)
    {
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
}
        </tbody>
    </table>
    }

