@{
    ViewData["Title"] = "Home Page";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger m-3" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<div class="container-fluid p-2">
    <div class="row">
        <div class="col-4 border-right border-left border-bottom">
            <form asp-action="Index" method="get" class="form-inline my-2 my-lg-0">
                <input class="form-control m-auto d-inline-block" type="search" name="userNameSearch" id="userNameSearch" placeholder="Search by username" aria-label="Search by username">
                <button class="btn btn-outline-success m-auto d-inline-block" type="submit">Search</button>
            </form>
            <hr />
            @if (Model.Count != 0)
            {
                foreach (var user in Model)
                {
                    <img class="rounded-circle m-1" style="width:50px; height:50px" src="@user.ProfilePhotoURL" />
                    <a class="m-1" asp-action="Details" asp-controller="User" asp-route-userId="@user.Id">@user.Name @user.LastName</a>
                    <hr />
                }
            }
        </div>
        <div class="col-8">
            
        </div>

    </div>
</div>
<div class="container-fluid p-2">
    <div class="row">
        <div class="col-md-4 border-right border-left border-bottom">
            
        </div>
        <div class="col-8">

        </div>

    </div>
</div>

